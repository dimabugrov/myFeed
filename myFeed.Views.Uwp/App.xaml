<Application
    x:Class="myFeed.Views.Uwp.App" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:platform="using:myFeed.Views.Uwp.Platform"
    xmlns:extensions="using:myFeed.Views.Uwp.Extensions">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
                <ResourceDictionary Source="Controls/SwipableSplitView.xaml" />
                <ResourceDictionary Source="Controls/TransparentButton.xaml"/>
                <ResourceDictionary Source="Controls/Expander.xaml" />
                <ResourceDictionary>
                    <platform:UwpLocator x:Key="Locator"/>
                    <extensions:LocaleConverter x:Key="Locale"/>
                    <extensions:NegateBoolConverter x:Key="NegateBool"/>
                    <extensions:FalsyToVisibleConverter x:Key="FalsyToVisible" />
                    <extensions:TruthyToVisibleConverter x:Key="TruthyToVisible"/>
                    <extensions:UpperStringConverter x:Key="StrToUpper"/>
                    <extensions:TruthyToTransparentConverter x:Key="TruthyToTransparent"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
