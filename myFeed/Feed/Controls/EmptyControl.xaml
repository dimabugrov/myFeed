<UserControl
    x:Class="myFeed.Feed.Controls.EmptyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:myFeed.Feed.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 -50 0 0">
            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEB5E;" FontSize="50" TextAlignment="Center" 
                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
            <TextBlock x:Uid="NoInternet" TextAlignment="Center" FontSize="24" FontWeight="SemiLight" 
                       TextWrapping="Wrap" Margin="36 6"/>
            <TextBlock x:Uid="NoInternetFixed" TextWrapping="Wrap" 
                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" 
                       TextAlignment="Center" FontSize="17"/>
            <Button Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                    x:Uid="NoInternetUpd" HorizontalAlignment="Center" 
                    x:Name="RefreshButton" Foreground="White" Margin="12"/>
        </StackPanel>
    </Grid>
</UserControl>
