<UserControl
    x:Class="myFeed.Search.Controls.WelcomeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Padding="12" Canvas.ZIndex="9" 
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-50,0,0">
            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE71E;" FontSize="50" TextAlignment="Center"
                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
            <TextBlock x:Uid="SearchHelpTitle" TextAlignment="Center" FontSize="24"
                       FontWeight="SemiLight" TextWrapping="Wrap" Margin="12,6"/>
            <TextBlock x:Uid="SearchHelpSubtitle" TextWrapping="Wrap" 
                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" 
                       TextAlignment="Center" FontSize="17" />
        </StackPanel>
    </Grid>
</UserControl>
