<ContentDialog
    x:Class="myFeed.Search.Controls.SearchAddDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    PrimaryButtonClick="OnPrimaryButtonClick"
    x:Uid ="SearchDialog"
    mc:Ignorable="d">

    <Grid Margin="0 12" HorizontalAlignment="Stretch"
        Loaded="{x:Bind ViewModel.LoadCategoriesAsync}">
        <StackPanel>
            <TextBlock x:Uid="SearchDialogSelect" TextWrapping="Wrap" />
            <ComboBox Margin="0 12 0 -12" HorizontalAlignment="Stretch" DisplayMemberPath="Key"
                SelectedItem="{x:Bind ViewModel.CategoriesViewModel.SelectedItem, Mode=TwoWay}"
                ItemsSource="{x:Bind ViewModel.CategoriesViewModel.Items}" />
        </StackPanel>
    </Grid>
</ContentDialog>
